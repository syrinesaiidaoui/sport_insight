{% extends 'back_office/base.html.twig' %}

{% block title %}Nouvelle Évaluation - Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-10">
  <div class="max-w-3xl mx-auto px-4">

    <!-- Header -->
    <div class="mb-8 text-center md:text-left">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Nouvelle Évaluation</h1>
      <p class="text-gray-500">Créer une nouvelle évaluation pour un joueur</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-md rounded-xl border border-gray-200 p-8">
      {{ include('back_office/evaluation/_form.html.twig') }}

      <div class="mt-8 pt-6 border-t border-gray-200 text-center md:text-left">
        <a href="{{ path('back_evaluation_index') }}" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-500 font-medium transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Retour à la liste
        </a>
      </div>
    </div>

  </div>
</div>
{% endblock %}
