{% extends 'back_office/base.html.twig' %}

{% block title %}Nouvel Entrainement - Admin{% endblock %}

{% block body %}
<div class="flex-1 overflow-auto">
  <div class="max-w-2xl mx-auto p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground">Créer un Entrainement</h1>
      <p class="text-muted-foreground mt-2">Ajoutez une nouvelle séance d'entrainement</p>
    </div>

    <div class="bg-card rounded-lg border border-border p-8">
      {{ include('back_office/entrainement/_form.html.twig') }}
    </div>

    <div class="mt-6">
      <a href="{{ path('back_entrainement_index') }}" class="inline-flex items-center gap-2 text-primary hover:underline">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour à la liste
      </a>
    </div>
  </div>
</div>
{% endblock %}
