{% extends 'front_office/base.html.twig' %}

{% block title %}Match Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% block content %}
            <h1>Match</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ match.id }}</td>
                    </tr>
                    <tr>
                        <th>Id_match</th>
                        <td>{{ match.idMatch }}</td>
                    </tr>
                    <tr>
                        <th>DateMatch</th>
                        <td>{{ match.dateMatch ? match.dateMatch|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>HeureDebut</th>
                        <td>{{ match.heureDebut ? match.heureDebut|date('H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Lieu</th>
                        <td>{{ match.lieu }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ match.type }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ match.statut }}</td>
                    </tr>
                    <tr>
                        <th>Lineup_domicile</th>
                        <td>{{ match.lineupDomicile }}</td>
                    </tr>
                    <tr>
                        <th>Lineup_exterieur</th>
                        <td>{{ match.lineupExterieur }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_front_matchs_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_front_matchs_edit', {'id': match.id}) }}" class="btn btn-primary">Edit</a>
            {{ include('front_office/matchs/_delete_form.html.twig', {'delete_form': delete_form}) }}
        {% endblock %}
    </div>
{% endblock %}