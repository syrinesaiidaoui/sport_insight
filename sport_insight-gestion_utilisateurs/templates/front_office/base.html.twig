                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ path('front_evaluation_index') }}">
                            ‚≠ê √âvaluations
                        </a>
                    </li>
                </ul>
            </li>
          
            <li>
                <a href="{{ path('app_annonce_index') }}"
                   class="{{ app.request.get('_route') starts with 'app_annonce' ? 'active' : '' }}">
                    Annonces
                </a>
            </li>
            <li>
                <a href="{{ path('app_commentaire_index') }}"
                   class="{{ app.request.get('_route') starts with 'front_equipement' ? 'active' : '' }}">
                    commentaires
                </a>
            </li>
            <li>
                <a href="{{ path('app_front_matchs_index') }}"
                   class="{{ app.request.get('_route') starts with 'app_front_matchs' ? 'active' : '' }}">
                    Matchs
                </a>
            </li>
            <li>
                <a href="{{ path('front_sponsoring_index') }}"
                   class="{{ app.request.get('_route') starts with 'front_sponsoring' ? 'active' : '' }}">
                    Sponsor
                </a>
                <a href="{{ path('app_contrat_sponsor_index') }}"
