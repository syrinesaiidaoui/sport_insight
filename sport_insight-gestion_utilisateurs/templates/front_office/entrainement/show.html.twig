{% extends 'front_office/base.html.twig' %}

{% block title %}{{ entrainement.type }} - Entrainements FC Club{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <a href="{{ path('front_entrainement_index') }}" style="color: var(--primary); text-decoration: none; margin-bottom: 24px; display: inline-block;">← Retour à la liste</a>

        <div class="front-card">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 24px;">
                <div>
                    <h1 class="section-title" style="margin-bottom: 8px;">{{ entrainement.type }}</h1>
                    <p style="color: var(--text-muted); font-size: 14px;">Prévu le {{ entrainement.dateEntrainement ? entrainement.dateEntrainement|date('d/m/Y') : 'N/A' }}</p>
                </div>
            </div>

            <div style="margin-bottom: 24px; padding-bottom: 24px; border-bottom: 1px solid var(--border-color);">
                <h3 style="color: var(--text-dark); font-weight: 600; margin-bottom: 8px;">Détails</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Heure de début</h4>
                        <p style="color: var(--text-dark); font-weight: 600;">{{ entrainement.heureDebut|date('H:i') }}</p>
                    </div>
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Heure de fin</h4>
                        <p style="color: var(--text-dark); font-weight: 600;">{{ entrainement.heureFin|date('H:i') }}</p>
                    </div>
                </div>
                <div style="margin-top: 16px;">
                    <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Lieu</h4>
                    <p style="color: var(--text-dark); font-weight: 600;">{{ entrainement.lieu }}</p>
                </div>
                <div style="margin-top: 16px;">
                    <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Objectif</h4>
                    <p style="color: var(--text-dark); line-height: 1.6;">{{ entrainement.objectif }}</p>
                </div>
                <div style="margin-top: 16px;">
                    <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Notes</h4>
                    <p style="color: var(--text-dark); line-height: 1.6;">{{ entrainement.notes|default('Aucune note') }}</p>
                </div>
            </div>

            <div style="display: flex; gap: 12px; padding-top: 24px; border-top: 1px solid var(--border-color);">
                <a href="{{ path('front_entrainement_edit', {'id': entrainement.id}) }}" class="btn btn-primary" style="padding: 8px 16px; font-size: 14px; text-decoration: none;">Éditer</a>
                <form method="post" action="{{ path('front_entrainement_delete', {'id': entrainement.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous vraiment sûr?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entrainement.id) }}">
                    <button type="submit" class="btn btn-danger" style="padding: 8px 16px; font-size: 14px; background: #ef4444; border: none; color: white; border-radius: 8px; cursor: pointer;">Supprimer</button>
                </form>
            </div>
            
            {# ── Participation quick actions for current user ── #}
            <div style="margin-top:18px; padding-top:18px; border-top:1px dashed var(--border-color);">
                <h3 style="margin-bottom:8px;">Ma participation</h3>
                {% if app.user %}
                    {% if user_participation is defined and user_participation %}
                        <div style="margin-bottom:8px;">Statut actuel: <strong>{{ user_participation.presence == 'present' ? 'Présent' : 'Absent' }}</strong></div>
                        {% if user_participation.justificationAbsence %}
                            <div style="margin-bottom:8px;">Justificatif: {{ user_participation.justificationAbsence }}</div>
                        {% endif %}

                        <form method="post" action="{{ path('front_participation_create_for_entrainement', {'id': entrainement.id}) }}" style="display:flex; gap:8px; flex-direction:column; max-width:480px;">
                            <input type="hidden" name="_token" value="{{ csrf_token('participation' ~ entrainement.id) }}">
                            <label>Présence:
                                <select name="presence">
                                    <option value="present" {% if user_participation.presence == 'present' %}selected{% endif %}>Présent</option>
                                    <option value="absent" {% if user_participation.presence == 'absent' %}selected{% endif %}>Absent</option>
                                </select>
                            </label>
                            <label>Justificatif (si absent):
                                <textarea name="justificationAbsence" rows="3">{{ user_participation.justificationAbsence }}</textarea>
                            </label>
                            <div style="display:flex; gap:8px;">
                                <button type="submit" class="btn btn-primary" style="padding:8px 12px;">Mettre à jour</button>
                            </div>
                        </form>
                        <form method="post" action="{{ path('front_participation_remove_for_entrainement', {'id': entrainement.id}) }}" onsubmit="return confirm('Annuler votre participation ?');" style="display:inline-block; margin-top:8px;">
                            <input type="hidden" name="_token" value="{{ csrf_token('participation' ~ entrainement.id) }}">
                            <button type="submit" class="btn btn-danger" style="padding:8px 12px;">Annuler ma participation</button>
                        </form>
                    {% else %}
                        <form method="post" action="{{ path('front_participation_create_for_entrainement', {'id': entrainement.id}) }}" style="display:flex; gap:8px; flex-direction:column; max-width:480px;">
                            <input type="hidden" name="_token" value="{{ csrf_token('participation' ~ entrainement.id) }}">
                            <label>Je participe
                                <select name="presence">
                                    <option value="present">Présent</option>
                                    <option value="absent">Absent</option>
                                </select>
                            </label>
                            <label>Justificatif (si absent)
                                <textarea name="justificationAbsence" rows="3"></textarea>
                            </label>
                            <button type="submit" class="btn btn-primary" style="padding:8px 12px;">Enregistrer ma participation</button>
                        </form>
                    {% endif %}
                {% else %}
                    <div>Veuillez vous connecter pour indiquer votre participation.</div>
                {% endif %}
            </div>

            {# ── All participations list ── #}
            <div style="margin-top:18px; padding-top:18px; border-top:1px dashed var(--border-color);">
                <h3 style="margin-bottom:8px;">Liste des participations</h3>
                {% if entrainement.participations|length > 0 %}
                    <ul style="list-style:none; padding:0; display:grid; gap:8px;">
                        {% for part in entrainement.participations %}
                            <li style="padding:8px; background:var(--card); border:1px solid var(--border); border-radius:8px; display:flex; justify-content:space-between; align-items:center;">
                                <div>{{ part.joueur.nom }} {{ part.joueur.prenom }}</div>
                                <div style="font-weight:600;">{{ part.presence == 'present' ? 'Présent' : 'Absent' }}</div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div>Aucune participation pour le moment.</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
