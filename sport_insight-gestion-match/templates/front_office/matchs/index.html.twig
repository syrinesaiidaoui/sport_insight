{% extends 'front_office/base.html.twig' %}

{% block title %}Matchs - Sport Insight{% endblock %}

{% block body %}
    <style>
        .matchs-section {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        .matchs-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .matchs-header h1 {
            font-size: 36px;
            font-weight: 800;
            color: var(--text-dark);
            margin: 0;
        }

        .header-actions {
            display: flex;
            gap: 16px;
            align-items: center;
        }

        .sort-link {
            padding: 10px 16px;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-dark);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.15s;
        }

        .sort-link:hover {
            border-color: var(--primary);
            background: var(--body-bg);
        }

        .create-btn {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 10px 20px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.15s;
            cursor: pointer;
        }

        .create-btn:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .matchs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .match-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            display: flex;
            flex-direction: column;
        }

        .match-card:hover {
            border-color: var(--primary);
            box-shadow: 0 12px 32px rgba(16, 185, 129, 0.2);
            transform: translateY(-6px);
        }

        .match-top {
            padding: 16px;
            background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
            color: white;
            font-size: 13px;
            font-weight: 500;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .match-date {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .match-status-badge {
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-scheduled {
            background: rgba(59, 130, 246, 0.2);
            color: #3b82f6;
        }

        .status-ongoing {
            background: rgba(16, 185, 129, 0.2);
            color: var(--primary);
        }

        .status-finished {
            background: rgba(107, 114, 128, 0.2);
            color: var(--text-muted);
        }

        .status-cancelled {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .match-teams {
            padding: 32px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 20px;
        }

        .team-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            flex: 1;
        }

        .team-logo {
            width: 100px;
            height: 100px;
            background: var(--body-bg);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .team-logo img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .team-name {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-dark);
            text-align: center;
            word-break: break-word;
        }

        .score-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            min-width: 80px;
        }

        .score {
            font-size: 48px;
            font-weight: 800;
            color: var(--text-dark);
            letter-spacing: -2px;
        }

        .vs-text {
            font-size: 12px;
            color: var(--text-muted);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .match-info {
            padding: 16px 24px;
            border-top: 1px solid var(--border-color);
            background: var(--body-bg);
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            font-size: 13px;
        }

        .info-item {
            display: flex;
            gap: 8px;
        }

        .info-icon {
            color: var(--primary);
            font-weight: 600;
            min-width: 18px;
        }

        .info-content {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .info-label {
            font-size: 11px;
            color: var(--text-muted);
            font-weight: 500;
            text-transform: uppercase;
        }

        .info-value {
            font-weight: 600;
            color: var(--text-dark);
        }

        .match-footer {
            padding: 16px 24px;
            display: flex;
            gap: 8px;
            border-top: 1px solid var(--border-color);
        }

        .action-btn {
            flex: 1;
            padding: 10px 12px;
            border: none;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.15s;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-hover);
        }

        .btn-secondary {
            background: var(--body-bg);
            color: var(--text-dark);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: #f3f4f6;
            border-color: var(--primary);
        }

        .btn-danger {
            background: var(--body-bg);
            color: #ef4444;
            border: 1px solid #fee2e2;
        }

        .btn-danger:hover {
            background: #fef2f2;
            border-color: #fecaca;
        }

        .empty-state {
            text-align: center;
            padding: 80px 40px;
        }

        .empty-state-icon {
            font-size: 80px;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .empty-state h2 {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 12px;
        }

        .empty-state p {
            color: var(--text-muted);
            margin-bottom: 32px;
            font-size: 16px;
        }
    </style>

    <div class="matchs-section">
        <div class="matchs-header">
            <h1>‚öΩ Matchs</h1>
            <div class="header-actions">
                <a href="{{ path('app_front_matchs_index', { order: currentOrder == 'asc' ? 'desc' : 'asc' }) }}" class="sort-link">
                    {{ currentOrder == 'asc' ? '‚Üë Ordre croissant' : '‚Üì Ordre d√©croissant' }}
                </a>
                <a href="{{ path('app_front_matchs_new') }}" class="create-btn">
                    ‚ûï Nouveau Match
                </a>
            </div>
        </div>

        {% if matchs %}
            <div class="matchs-grid">
                {% for match in matchs %}
                    <div class="match-card">
                        <div class="match-top">
                            <div class="match-date">
                                {{ match.dateMatch ? match.dateMatch|date('d.m.Y H:i') : 'N/A' }}
                            </div>
                            <span class="match-status-badge status-{% if match.statut %}{{ match.statut|lower|replace({'programm√©': 'scheduled', 'en cours': 'ongoing', 'termin√©': 'finished', 'annul√©': 'cancelled'}) }}{% else %}scheduled{% endif %}">
                                {{ match.statut ?? 'N/A' }}
                            </span>
                        </div>

                        <div class="match-teams">
                            <!-- √âquipe Domicile -->
                            <div class="team-container">
                                <div class="team-logo">
                                    {% if match.equipeDomicile and match.equipeDomicile.image %}
                                        <img src="{{ asset('uploads/equipes/' ~ match.equipeDomicile.image) }}" alt="{{ match.equipeDomicile.nom }}">
                                    {% else %}
                                        <span style="color: var(--text-muted); font-size: 40px;">üè†</span>
                                    {% endif %}
                                </div>
                                <div class="team-name">{{ match.equipeDomicile.nom ?? 'N/A' }}</div>
                            </div>

                            <!-- Score -->
                            <div class="score-container">
                                <div class="score">
                                    {{ match.scoreEquipeDomicile ?? 0 }} - {{ match.scoreEquipeExterieur ?? 0 }}
                                </div>
                                <div class="vs-text">VS</div>
                            </div>

                            <!-- √âquipe Ext√©rieure -->
                            <div class="team-container">
                                <div class="team-logo">
                                    {% if match.equipeExterieur and match.equipeExterieur.image %}
                                        <img src="{{ asset('uploads/equipes/' ~ match.equipeExterieur.image) }}" alt="{{ match.equipeExterieur.nom }}">
                                    {% else %}
                                        <span style="color: var(--text-muted); font-size: 40px;">‚úàÔ∏è</span>
                                    {% endif %}
                                </div>
                                <div class="team-name">{{ match.equipeExterieur.nom ?? 'N/A' }}</div>
                            </div>
                        </div>

                        <div class="match-info">
                            <div class="info-item">
                                <span class="info-icon">üìç</span>
                                <div class="info-content">
                                    <span class="info-label">Lieu</span>
                                    <span class="info-value">{{ match.lieu ?? 'Non renseign√©' }}</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-icon">üéØ</span>
                                <div class="info-content">
                                    <span class="info-label">Type</span>
                                    <span class="info-value">{{ match.type ?? 'N/A' }}</span>
                                </div>
                            </div>
                        </div>

                        <div class="match-footer">
                            <a href="{{ path('app_front_matchs_show', {'id': match.id}) }}" class="action-btn btn-primary">
                                üëÅÔ∏è D√©tails
                            </a>
                            <a href="{{ path('app_front_matchs_edit', {'id': match.id}) }}" class="action-btn btn-secondary">
                                ‚úèÔ∏è Modifier
                            </a>
                            <button class="action-btn btn-danger" onclick="if(confirm('√ätes-vous s√ªr ?')) { document.getElementById('delete-form-{{ match.id }}').submit(); }">
                                üóëÔ∏è Supprimer
                            </button>
                        </div>
                    </div>

                    <form id="delete-form-{{ match.id }}" method="post" action="{{ path('app_front_matchs_delete', {'id': match.id}) }}" style="display:none;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ match.id) }}">
                    </form>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">‚öΩ</div>
                <h2>Aucun match trouv√©</h2>
                <p>Il n'y a actuellement aucun match pr√©vu.</p>
                <a href="{{ path('app_front_matchs_new') }}" class="create-btn">
                    ‚ûï Cr√©er un match
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}