{% extends 'equipe/base.html.twig' %}

{% block content %}
    <h1>{{ equipe.nom }}</h1>

    {% if equipe.image %}
        <div class="mb-4">
            <img src="{{ asset('uploads/equipes/' ~ equipe.image) }}" alt="{{ equipe.nom }}" style="max-height: 200px; max-width: 300px;">
        </div>
    {% endif %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Coach</th>
                <td>{{ equipe.coach }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-primary">Edit</a>
    {{ include('equipe/_delete_form.html.twig') }}
{% endblock %}
