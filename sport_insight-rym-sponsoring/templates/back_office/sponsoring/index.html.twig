{% extends 'back_office/base.html.twig' %}

{% block title %}Admin - Sponsoring{% endblock %}
{% block page_title %}Sponsoring{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_sponsor_new') }}" class="btn btn-primary btn-sm">
        <i class="lucide-plus" style="font-size:14px"></i> Nouveau sponsor
    </a>
    <a href="{{ path('app_contrat_sponsor_new') }}" class="btn btn-success btn-sm">
        <i class="lucide-plus" style="font-size:14px"></i> Nouveau contrat
    </a>
{% endblock %}

{% block body %}
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-card-label">Sponsors actifs</div>
                <div class="stat-card-value">{{ sponsors|length }}</div>
                <div class="stat-card-sub">Total sponsors</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-card-label">Revenu annuel</div>
                <div class="stat-card-value">{{ (sponsors|reduce((carry, sponsor) => carry + sponsor.budget, 0) / 1000)|round(0) }}K DT</div>
                <div class="stat-card-sub">Budget total</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-card-label">Contrats actifs</div>
                <div class="stat-card-value">{{ contrats|length }}</div>
                <div class="stat-card-sub">Total contrats</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-card-label">Valeur moyenne</div>
                <div class="stat-card-value">{% if contrats|length > 0 %}{{ (contrats|reduce((carry, contrat) => carry + contrat.montant, 0) / contrats|length / 1000)|round(0) }}K{% else %}0{% endif %} DT</div>
                <div class="stat-card-sub">Par contrat</div>
            </div>
        </div>
    </div>

    <div class="data-table">
        <div class="data-table-header">
            <h3>Liste des contrats sponsors</h3>
            <a href="{{ path('app_contrat_sponsor_new') }}" class="btn btn-sm btn-success">
                <i class="lucide-plus" style="font-size:14px"></i> Ajouter contrat
            </a>
        </div>

        <!-- Formulaire de recherche -->
        <div class="search-box" style="margin-bottom: 20px;">
            <form method="GET" class="search-form-inline">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px; align-items: flex-end;">
                    <div>
                        <label style="display: block; margin-bottom: 6px; font-weight: 600; font-size: 14px;">Nom Sponsor</label>
                        <input 
                            type="text" 
                            name="sponsor_nom" 
                            placeholder="Rechercher par nom..."
                            value="{{ sponsor_nom ?? '' }}"
                            style="width: 100%; padding: 8px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px;"
                        >
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 6px; font-weight: 600; font-size: 14px;">Date D√©but</label>
                        <input 
                            type="date" 
                            name="date_debut" 
                            value="{{ date_debut ?? '' }}"
                            style="width: 100%; padding: 8px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px;"
                        >
                    </div>
                    <div style="display: flex; gap: 8px;">
                        <button type="submit" style="padding: 8px 16px; background: #10b981; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; font-size: 14px;">
                            üîç Rechercher
                        </button>
                        <a href="{{ path('back_sponsoring_index') }}" style="padding: 8px 16px; background: #6b7280; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; font-size: 14px; text-decoration: none; display: inline-flex; align-items: center;">
                            ‚úï R√©initialiser
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Sponsor</th>
                    <th>Montant</th>
                    <th>D√©buit</th>
                    <th>Fin</th>
                    <th>√âquipe</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if contrats|length > 0 %}
                    {% for contrat in contrats %}
                        <tr>
                            <td><strong>{{ contrat.sponsor.nom }}</strong></td>
                            <td>{{ contrat.montant }} DT</td>
                            <td>{{ contrat.dateDebut ? contrat.dateDebut|date('d/m/Y') : '-' }}</td>
                            <td>{{ contrat.dateFin ? contrat.dateFin|date('d/m/Y') : '-' }}</td>
                            <td>{{ contrat.equipe.nom ?? '-' }}</td>
                            <td>
                                <a href="{{ path('app_contrat_sponsor_edit', {'id': contrat.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                                <a href="{{ path('app_contrat_sponsor_pdf', {'id': contrat.id}) }}" class="btn btn-sm btn-outline-info" target="_blank">PDF</a>
                                <form method="post" action="{{ path('app_contrat_sponsor_delete', {'id': contrat.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr ?');" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" style="text-align:center; padding: 20px;">Aucun contrat sponsor trouv√©</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>

    <style>
        .data-table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .data-table-header h3 {
            margin: 0;
        }
    </style>
{% endblock %}
