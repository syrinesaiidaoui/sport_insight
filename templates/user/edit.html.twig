{% extends 'base.html.twig' %}

{% block title %}Modifier {{ user.nomComplet }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-warning">
        <h3 class="mb-0">
          <i class="bi bi-pencil-square"></i> Modifier : {{ user.nomComplet }}
        </h3>
      </div>
      <div class="card-body">
        {{ include('user/_form.html.twig', {button_label: 'Mettre a jour'}) }}
      </div>
    </div>
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">
      <i class="bi bi-arrow-left"></i> Retour a la liste
    </a>
  </div>
</div>
{% endblock %}