{% extends 'back_office/base.html.twig' %}

{% block title %}Détails Entrainement - Admin{% endblock %}

{% block body %}
<div class="flex-1 overflow-auto">
  <div class="max-w-2xl mx-auto p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground">{{ entrainement.type }}</h1>
      <p class="text-muted-foreground mt-2">{{ entrainement.dateEntrainement|date('d/m/Y H:i') }}</p>
    </div>

    <div class="bg-card rounded-lg border border-border p-8 space-y-6">
      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Type d'Entrainement</label>
        <p class="text-foreground">{{ entrainement.type }}</p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Date</label>
        <p class="text-foreground">{{ entrainement.dateEntrainement|date('d/m/Y') }}</p>
      </div>

      <div class="grid grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-semibold text-muted-foreground mb-2">Heure de début</label>
          <p class="text-foreground">{{ entrainement.heureDebut|date('H:i') }}</p>
        </div>
        <div>
          <label class="block text-sm font-semibold text-muted-foreground mb-2">Heure de fin</label>
          <p class="text-foreground">{{ entrainement.heureFin|date('H:i') }}</p>
        </div>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Lieu</label>
        <p class="text-foreground">{{ entrainement.lieu }}</p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Objectif</label>
        <p class="text-foreground">{{ entrainement.objectif }}</p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Notes</label>
        <p class="text-foreground">{{ entrainement.notes|default('Aucune note') }}</p>
      </div>
    </div>

    <div class="mt-8 flex items-center gap-4">
      <a href="{{ path('back_entrainement_edit', {'id': entrainement.id}) }}" 
         class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Éditer
      </a>
      <a href="{{ path('back_entrainement_index') }}" class="inline-flex items-center gap-2 text-primary hover:underline">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour à la liste
      </a>
    </div>
  </div>
</div>
{% endblock %}
