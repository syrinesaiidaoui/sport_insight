<form method="post" action="{{ path('app_sponsor_delete', {'id': sponsor.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce sponsor ?');" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.id) }}">
    <button class="btn btn-danger" type="submit">
        <i class="lucide-trash-2"></i> Supprimer
    </button>
</form>
