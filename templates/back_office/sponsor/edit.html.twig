{% extends 'back_office/base.html.twig' %}

{% block title %}Éditer sponsor{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-header">
            <h1>Éditer le sponsor "{{ sponsor.nom }}"</h1>
        </div>

        <div class="card form-card">
            {{ include('back_office/sponsor/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="mt-3 form-actions">
            <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
                <i class="lucide-arrow-left"></i> Retour à la liste
            </a>
            {{ include('back_office/sponsor/_delete_form.html.twig') }}
        </div>
    </div>

    <style>
        .page-header {
            margin-bottom: 30px;
        }
        .page-header h1 {
            margin: 0;
            color: var(--text-dark);
        }
        .form-card {
            background: var(--card-bg);
            border-radius: 8px;
            padding: 30px;
            border: 1px solid var(--border-color);
            max-width: 600px;
        }
        .form-actions {
            display: flex;
            gap: 12px;
        }
        .btn-secondary {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: var(--text-muted);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s;
        }
        .btn-secondary:hover {
            background: #4b5563;
            color: white;
        }
        .btn-danger {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: #ef4444;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s;
        }
        .btn-danger:hover {
            background: #dc2626;
        }
        .mt-3 {
            margin-top: 20px;
        }
    </style>
{% endblock %}
