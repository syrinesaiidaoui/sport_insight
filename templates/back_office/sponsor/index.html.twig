{% extends 'back_office/base.html.twig' %}

{% block title %}Sponsors{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-header">
            <h1>Gestion des Sponsors</h1>
            <a href="{{ path('app_sponsor_new') }}" class="btn btn-create">
                <i class="lucide-plus"></i> Nouveau sponsor
            </a>
        </div>

        <!-- Search Bar -->
        <div class="card search-card">
            <h3 style="margin: 0 0 15px 0; color: var(--text-dark);">
                <i class="lucide-search" style="font-size: 18px; vertical-align: middle; margin-right: 8px;"></i>
                Filtrer les sponsors
            </h3>
            <form method="get" class="search-form">
                <div class="search-fields">
                    <div class="search-field">
                        <label for="email">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-control"
                            placeholder="Rechercher par email..."
                            value="{{ email ?? '' }}"
                        >
                    </div>
                    <div class="search-field">
                        <label for="budget">Budget</label>
                        <input 
                            type="number" 
                            id="budget" 
                            name="budget" 
                            class="form-control"
                            placeholder="Rechercher par budget..."
                            value="{{ budget ?? '' }}"
                            step="0.01"
                            min="0"
                        >
                    </div>
                </div>
                <div class="search-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="lucide-search"></i> Rechercher
                    </button>
                    <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
                        <i class="lucide-x"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>

        {% if sponsors %}
            <div class="card">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Budget</th>
                            <th>Contrats</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for sponsor in sponsors %}
                        <tr>
                            <td><strong>{{ sponsor.nom }}</strong></td>
                            <td>{{ sponsor.email }}</td>
                            <td><strong>{{ sponsor.budget }} DT</strong></td>
                            <td>
                                <span class="badge badge-info">{{ sponsor.contratSponsors|length }}</span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('app_sponsor_show', {'id': sponsor.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="lucide-eye"></i>
                                    </a>
                                    <a href="{{ path('app_sponsor_edit', {'id': sponsor.id}) }}" class="btn btn-sm btn-warning" title="Éditer">
                                        <i class="lucide-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                <i class="lucide-info"></i> Aucun sponsor trouvé.
            </div>
        {% endif %}
    </div>

    <style>
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        .page-header h1 {
            margin: 0;
            color: var(--text-dark);
        }
        .btn-create {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s;
        }
        .btn-create:hover {
            background: var(--primary-hover);
            color: white;
        }
        .search-card {
            background: var(--card-bg);
            border-radius: 8px;
            padding: 20px;
            border: 2px solid var(--primary);
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(16, 185, 129, 0.1);
        }
        .search-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .search-fields {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }
        .search-field {
            display: flex;
            flex-direction: column;
        }
        .search-field label {
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--text-dark);
            font-size: 15px;
        }
        .search-field input {
            padding: 10px 14px;
            border: 2px solid var(--border-color);
            border-radius: 6px;
            font-size: 14px;
            font-family: inherit;
            transition: all 0.3s;
        }
        .search-field input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }
        .search-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        .btn-primary, .btn-secondary {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            font-size: 14px;
        }
        .btn-primary {
            background: var(--primary);
            color: white;
        }
        .btn-primary:hover {
            background: var(--primary-hover);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(16, 185, 129, 0.2);
        }
        .btn-secondary {
            background: #6b7280;
            color: white;
        }
        .btn-secondary:hover {
            background: #4b5563;
            color: white;
            transform: translateY(-1px);
        }
        .form-control {
            padding: 8px 12px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 14px;
            font-family: inherit;
        }
        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }
        .card {
            background: var(--card-bg);
            border-radius: 8px;
            padding: 20px;
            border: 1px solid var(--border-color);
        }
        .card table {
            margin-bottom: 0;
        }
        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            background: var(--primary);
            color: white;
            font-size: 12px;
            font-weight: 500;
        }
        .badge-info {
            background: #3b82f6;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            display: inline-block;
            font-size: 13px;
            font-weight: 500;
        }
        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: flex-end;
        }
        .btn-info, .btn-warning {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 6px 10px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: opacity 0.3s;
        }
        .btn-info {
            background: #3b82f6;
            color: white;
        }
        .btn-info:hover {
            background: #2563eb;
            color: white;
        }
        .btn-warning {
            background: #f59e0b;
            color: white;
        }
        .btn-warning:hover {
            background: #d97706;
            color: white;
        }
        .text-end {
            text-align: right;
        }
        .search-card {
            margin-bottom: 25px;
        }
        .search-form {
            padding: 0;
        }
        .form-row {
            display: flex;
            gap: 15px;
            align-items: flex-end;
            flex-wrap: wrap;
        }
        .search-form .form-group {
            flex: 1;
            min-width: 200px;
            display: flex;
            flex-direction: column;
        }
        .search-form label {
            font-size: 13px;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 5px;
            text-transform: uppercase;
        }
        .search-form input,
        .search-form select {
            padding: 8px 12px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 14px;
            font-family: inherit;
        }
        .search-form input:focus,
        .search-form select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }
        .btn-search, .btn-reset {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: background 0.3s;
        }
        .btn-search {
            background: var(--primary);
            color: white;
        }
        .btn-search:hover {
            background: var(--primary-hover);
        }
        .btn-reset {
            background: #e5e7eb;
            color: var(--text-dark);
        }
        .btn-reset:hover {
            background: #d1d5db;
        }
    </style>
{% endblock %}
