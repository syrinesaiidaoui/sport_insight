{% extends 'front_office/base.html.twig' %}

{% block title %}Passer la commande - Équipement du Club{% endblock %}

{% block body %}
<div class="container py-5">
    <style>
        .checkout-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e5e7eb;
        }

        .checkout-header h1 {
            font-size: 28px;
            font-weight: 700;
            color: #111827;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .checkout-form-card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 32px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        }

        .checkout-form-card h5 {
            font-weight: 700;
            color: #111827;
            margin-bottom: 24px;
            font-size: 16px;
        }

        .checkout-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 0;
        }

        .checkout-row.full {
            grid-template-columns: 1fr;
        }

        @media (max-width: 768px) {
            .checkout-row {
                grid-template-columns: 1fr;
            }
        }

        .checkout-summary-card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .checkout-summary-header {
            background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
            padding: 20px 24px;
            border-bottom: 1px solid #e5e7eb;
        }

        .checkout-summary-header h5 {
            margin: 0;
            color: #111827;
            font-weight: 700;
            font-size: 16px;
        }

        .checkout-summary-body {
            padding: 24px;
            max-height: 400px;
            overflow-y: auto;
        }

        .checkout-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 16px;
            padding-bottom: 16px;
            border-bottom: 1px solid #e5e7eb;
        }

        .checkout-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

        .checkout-item-left {
            flex: 1;
        }

        .checkout-item-name {
            font-weight: 600;
            color: #111827;
            font-size: 14px;
            margin-bottom: 4px;
        }

        .checkout-item-qty {
            font-size: 13px;
            color: #6b7280;
        }

        .checkout-item-price {
            font-weight: 700;
            color: var(--primary);
            font-size: 14px;
            text-align: right;
        }

        .checkout-divider {
            height: 1px;
            background: #e5e7eb;
            margin: 16px 0;
        }

        .checkout-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 16px;
            border-bottom: 2px solid #e5e7eb;
        }

        .checkout-total h6 {
            margin: 0;
            color: #6b7280;
            font-weight: 600;
            font-size: 14px;
        }

        .checkout-total h5 {
            margin: 0;
            color: var(--primary);
            font-weight: 700;
            font-size: 18px;
        }

        .alert-info-checkout {
            background: rgba(59, 130, 246, 0.05);
            border: 1px solid rgba(59, 130, 246, 0.2);
            border-radius: 8px;
            padding: 12px 16px;
            color: #1e40af;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
    </style>

    <div class="checkout-header">
        <h1><i class="fa fa-credit-card"></i> Passer la commande</h1>
        <a href="{{ path('app_cart_index') }}" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Retour au panier
        </a>
    </div>

    {% if app.flashes('error')|length > 0 %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5><i class="fa fa-exclamation-circle"></i> Erreurs de validation</h5>
            <ul class="mb-0 mt-2">
                {% for message in app.flashes('error') %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <div class="row">
        {# Order Form #}
        <div class="col-lg-8">
            <div class="checkout-form-card">
                <h5><i class="fa fa-map"></i> Informations de livraison</h5>
                <form method="POST" novalidate="novalidate">
                    <div class="checkout-row">
                        <div class="form-group">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="votre@email.com" required>
                            <small class="form-text">Nous vous enverrons la confirmation de commande</small>
                        </div>

                        <div class="form-group">
                            <label for="name" class="form-label">Nom complet *</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Votre nom complet" required>
                        </div>
                    </div>

                    <div class="checkout-row full">
                        <div class="form-group">
                            <label for="address" class="form-label">Adresse de livraison *</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="123 Rue de la Paix" required>
                        </div>
                    </div>

                    <div class="checkout-row">
                        <div class="form-group">
                            <label for="city" class="form-label">Ville *</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Votre ville" required>
                        </div>

                        <div class="form-group">
                            <label for="zipCode" class="form-label">Code postal *</label>
                            <input type="text" class="form-control" id="zipCode" name="zipCode" placeholder="12345" pattern="[0-9]{5}" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100" style="margin-top: 24px;">
                        <i class="fa fa-lock"></i> Confirmer la commande
                    </button>
                </form>
            </div>
        </div>

        {# Order Summary #}
        <div class="col-lg-4">
            <div class="checkout-summary-card sticky-top" style="top: 20px;">
                <div class="checkout-summary-header">
                    <h5><i class="fa fa-shopping-bag"></i> Résumé de la commande</h5>
                </div>
                <div class="checkout-summary-body">
                    {% for productId, item in cart %}
                        <div class="checkout-item">
                            <div class="checkout-item-left">
                                <div class="checkout-item-name">{{ item.product.name }}</div>
                                <div class="checkout-item-qty">Quantité: <strong>{{ item.quantity }}</strong></div>
                            </div>
                            <div class="checkout-item-price">
                                {{ (item.product.price * item.quantity)|number_format(2, ',', '.') }} USD
                            </div>
                        </div>
                    {% endfor %}

                    <div class="checkout-divider"></div>

                    <div class="checkout-total">
                        <h6>Total:</h6>
                        <h5>{{ total|number_format(2, ',', '.') }} USD</h5>
                    </div>
                    
                    <div class="alert-info-checkout">
                        <i class="fa fa-info-circle"></i> Confirmation par email après validation
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
