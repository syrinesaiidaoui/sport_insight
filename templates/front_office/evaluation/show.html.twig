{% extends 'front_office/base.html.twig' %}

{% block title %}Détails Évaluation{% endblock %}

{% block body %}
<div class="flex-1 overflow-auto">
  <div class="max-w-2xl mx-auto p-8">

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground">
        Évaluation – {{ evaluation.joueur.prenom }} {{ evaluation.joueur.nom }}
      </h1>
      <p class="text-muted-foreground mt-2">
        Entrainement : {{ evaluation.entrainement.type }}
      </p>
    </div>

    <!-- Card -->
    <div class="bg-card rounded-lg border border-border p-8 space-y-6">

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Joueur</label>
        <p class="text-foreground">
          {{ evaluation.joueur.prenom }} {{ evaluation.joueur.nom }}
        </p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Entrainement</label>
        <p class="text-foreground">{{ evaluation.entrainement.type }}</p>
      </div>

      <!-- Notes -->
      <div class="grid grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-semibold text-muted-foreground mb-2">Physique</label>
          <p class="text-foreground font-bold">{{ evaluation.notePhysique }}/20</p>
        </div>

        <div>
          <label class="block text-sm font-semibold text-muted-foreground mb-2">Technique</label>
          <p class="text-foreground font-bold">{{ evaluation.noteTechnique }}/20</p>
        </div>

        <div>
          <label class="block text-sm font-semibold text-muted-foreground mb-2">Tactique</label>
          <p class="text-foreground font-bold">{{ evaluation.noteTactique }}/20</p>
        </div>
      </div>

      <div>
        <label class="block text-sm font-semibold text-muted-foreground mb-2">Commentaire</label>
        <p class="text-foreground">
          {{ evaluation.commentaire|default('Aucun commentaire') }}
        </p>
      </div>

    </div>

    <!-- Actions -->
    <div class="mt-8 flex items-center gap-4">
      <a href="{{ path('front_evaluation_edit', { id: evaluation.id }) }}"
         class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors">
        Éditer
      </a>

      <a href="{{ path('front_evaluation_index') }}"
         class="inline-flex items-center gap-2 text-primary hover:underline">
        Retour à la liste
      </a>
    </div>

  </div>
</div>
{% endblock %}
