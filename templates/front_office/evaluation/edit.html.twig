{% extends 'front_office/base.html.twig' %}

{% block title %}Éditer Evaluation - Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-frontground">
  <div class="max-w-3xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-foreground mb-2">Éditer Évaluation</h1>
      <p class="text-muted-foreground">Modifier l'évaluation du joueur</p>
    </div>

    <div class="bg-card rounded-lg border border-border p-8">
      {{ include('front_office/evaluation/_form.html.twig', {button_label: 'Mettre à jour'}) }}

      <div class="mt-8 space-y-4 pt-6 border-t border-border">
        {{ include('front_office/evaluation/_delete_form.html.twig') }}
        <a href="{{ path('front_evaluation_index') }}" class="block text-primary hover:text-primary/80 font-medium">
          ← Retour à la liste
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
