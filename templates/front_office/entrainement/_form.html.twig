{{ form_start(form) }}
<div class="space-y-6">

    {# Type d'Entrainement #}
    <div>
        {{ form_label(form.type, 'Type d\'Entrainement', {'label_attr': {'class': 'block text-sm font-semibold text-foreground mb-2'}}) }}
        {{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-2 border border-border rounded-lg bg-frontground text-foreground placeholder-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
        {{ form_errors(form.type, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
    </div>

    {# Date d'Entrainement #}
