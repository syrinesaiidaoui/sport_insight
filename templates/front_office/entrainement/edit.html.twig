{% extends 'front_office/base.html.twig' %}

{% block title %}Éditer Entrainement - Admin{% endblock %}

{% block body %}
<div class="flex-1 overflow-auto">
  <div class="max-w-2xl mx-auto p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground">Éditer Entrainement</h1>
      <p class="text-muted-foreground mt-2">{{ entrainement.type }} - {{ entrainement.dateEntrainement|date('d/m/Y') }}</p>
    </div>

    <div class="bg-card rounded-lg border border-border p-8">
      {{ include('front_office/entrainement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="mt-6 flex items-center gap-4">
      <a href="{{ path('front_entrainement_index') }}" class="inline-flex items-center gap-2 text-primary hover:underline">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour à la liste
      </a>
      {{ include('front_office/entrainement/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}
