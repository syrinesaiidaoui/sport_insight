{% extends 'front_office/base.html.twig' %}

{% block title %}My Orders - Sport Insight{% endblock %}

{% block body %}
    <h2 class="section-title">My Orders</h2>

    {% if orders|length > 0 %}
        <div style="display: grid; gap: 20px; max-width: 900px;">
            {% for order in orders %}
                <div class="front-card" style="padding: 24px; border: 1px solid #e5e7eb; border-radius: 12px;">
                    <!-- Order Header -->
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; padding-bottom: 16px; border-bottom: 1px solid #e5e7eb;">
                        <div>
                            <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 4px;">Order #{{ order.id }}</h3>
                            <p style="font-size: 13px; color: #6b7280; margin: 0;">{{ order.orderDate|date('d/m/Y H:i') }}</p>
                        </div>
                        <div style="text-align: right;">
                            {% if order.status == 'pending' %}
                                <span class="badge-warning" style="background: rgba(245, 158, 11, 0.1); color: #d97706; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">‚è≥ Pending</span>
                            {% elseif order.status == 'confirmed' %}
                                <span class="badge-success" style="background: rgba(16, 185, 129, 0.1); color: #059669; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">‚úì Confirmed</span>
                            {% elseif order.status == 'shipped' %}
                                <span class="badge-info" style="background: rgba(59, 130, 246, 0.1); color: #2563eb; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">üì¶ Shipped</span>
                            {% elseif order.status == 'delivered' %}
                                <span class="badge-success" style="background: rgba(34, 197, 94, 0.1); color: #16a34a; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">‚úì Delivered</span>
                            {% else %}
                                <span style="background: rgba(107, 114, 128, 0.1); color: #4b5563; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">{{ order.status }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div style="margin-bottom: 16px;">
                        <div style="display: flex; gap: 12px; align-items: center;">
                            {% if order.product.image %}
                                <img src="{{ asset('uploads/' ~ order.product.image) }}" alt="{{ order.product.name }}" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; border: 1px solid #e5e7eb;">
                            {% else %}
                                <div style="width: 60px; height: 60px; background: #f3f4f6; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: #9ca3af; font-size: 24px;">üì¶</div>
                            {% endif %}
                            <div style="flex: 1;">
                                <p style="font-weight: 600; margin: 0 0 4px;">{{ order.product.name }}</p>
                                <p style="font-size: 13px; color: #6b7280; margin: 0;">Category: {{ order.product.category }}</p>
                                <p style="font-size: 13px; color: #6b7280; margin: 0;">Brand: {{ order.product.brand ?? 'N/A' }}</p>
                            </div>
                            <div style="text-align: right;">
                                <p style="font-weight: 600; color: var(--primary); font-size: 16px; margin: 0 0 4px;">${{ order.product.price }}</p>
                                <p style="font-size: 13px; color: #6b7280; margin: 0;">Qty: {{ order.quantity }}</p>
                                <p style="font-weight: 600; color: #111827; margin: 4px 0 0;">Total: ${{ order.product.price * order.quantity }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div style="background: #f9fafb; padding: 12px; border-radius: 8px; display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 12px; text-align: center; font-size: 12px;">
                        <div>
                            <p style="color: #6b7280; margin: 0 0 4px;">Quantity</p>
                            <p style="font-weight: 600; margin: 0;">{{ order.quantity }}</p>
                        </div>
                        <div>
                            <p style="color: #6b7280; margin: 0 0 4px;">Unit Price</p>
                            <p style="font-weight: 600; margin: 0;">${{ order.product.price }}</p>
                        </div>
                        <div>
                            <p style="color: #6b7280; margin: 0 0 4px;">Total Price</p>
                            <p style="font-weight: 600; color: var(--primary); margin: 0; font-size: 14px;">${{ order.product.price * order.quantity }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div style="max-width: 600px; margin: 60px auto; text-align: center; padding: 40px; background: #f9fafb; border-radius: 12px; border: 1px dashed #e5e7eb;">
            <svg style="width: 64px; height: 64px; margin: 0 auto 16px; opacity: 0.5;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2v-9a2 2 0 012-2z"/>
            </svg>
            <h3 style="font-size: 18px; font-weight: 600; color: #111827; margin-bottom: 8px;">No Orders Yet</h3>
            <p style="font-size: 14px; color: #6b7280; margin-bottom: 20px;">You haven't placed any orders yet. Start shopping now!</p>
            <a href="{{ path('front_equipement_index') }}" class="btn btn-primary" style="padding: 12px 24px; text-decoration: none;">
                <svg class="icon" aria-hidden="true"><use href="#icon-home"/></svg>Continue Shopping
            </a>
        </div>
    {% endif %}

    <div style="margin-top: 30px; text-align: center;">
        <a href="{{ path('front_equipement_index') }}" class="btn btn-secondary" style="padding: 12px 24px; text-decoration: none;">
            ‚Üê Back to Shop
        </a>
    </div>
{% endblock %}
