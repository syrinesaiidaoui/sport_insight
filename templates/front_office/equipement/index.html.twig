{% extends 'front_office/base.html.twig' %}

{% block title %}Equipement - Sport Insight{% endblock %}

{# ===========================
   AI CHAT HTML
   =========================== #}
{% block extra_chat %}
<div id="ai-chat-bubble">üí¨</div>

<div id="ai-chat-window">
    <div id="ai-chat-header">
        AI Assistant
        <span id="ai-chat-close">&times;</span>
    </div>
    <div id="ai-chat-messages"></div>
    <form id="ai-chat-form">
        <input type="text" id="ai-chat-input" placeholder="Ask something..." required>
        <button type="submit">Send</button>
    </form>
</div>

<script>
const bubble = document.getElementById('ai-chat-bubble');
const windowChat = document.getElementById('ai-chat-window');
const closeBtn = document.getElementById('ai-chat-close');
const form = document.getElementById('ai-chat-form');
const input = document.getElementById('ai-chat-input');
const messages = document.getElementById('ai-chat-messages');

bubble.onclick = () => { windowChat.style.display = 'flex'; bubble.style.display = 'none'; input.focus(); };
closeBtn.onclick = () => { windowChat.style.display = 'none'; bubble.style.display = 'flex'; };
form.onsubmit = async e => {
    e.preventDefault();
    const userText = input.value.trim();
    if(!userText) return;

    const userMsg = document.createElement('div'); 
    userMsg.innerHTML = `<b>You:</b> ${userText}`; 
    messages.appendChild(userMsg);
    input.value = '';
    messages.scrollTop = messages.scrollHeight;

    try {
        const res = await fetch("{{ path('front_equipement_ai_chat') }}", {
            method: 'POST',
            headers: {'Content-Type':'application/json'},
            body: JSON.stringify({message: userText})
        });
        const data = await res.json();
        const aiMsg = document.createElement('div');
        aiMsg.innerHTML = `<b>AI:</b> ${data.reply}`;
        messages.appendChild(aiMsg);
        messages.scrollTop = messages.scrollHeight;
    } catch(err) {
        const aiMsg = document.createElement('div');
        aiMsg.innerHTML = `<b>AI:</b> Sorry, I'm temporarily unavailable.`;
        messages.appendChild(aiMsg);
        messages.scrollTop = messages.scrollHeight;
    }
};
</script>
{% endblock %}

{# ===========================
   CSS
   =========================== #}
{% block stylesheets %}
{{ parent() }}

<style>
#ai-chat-bubble {
    position: fixed !important;
    bottom: 25px;
    right: 25px;
    background: #10b981;
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26px;
    cursor: pointer;
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
    z-index: 999999 !important;
    transition: transform 0.2s ease;
}
#ai-chat-bubble:hover { transform: scale(1.1); }

#ai-chat-window {
    position: fixed !important;
    bottom: 95px;
    right: 25px;
    width: 360px;
    max-height: 500px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 50px rgba(0,0,0,0.35);
    display: none;
    flex-direction: column;
    overflow: hidden;
    z-index: 999999 !important;
}

#ai-chat-header {
    background: #10b981;
    color: white;
    padding: 15px;
    font-weight: 600;
    display: flex;
