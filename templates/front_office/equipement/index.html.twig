</style>
{% endblock %}

{# ===========================
   MAIN BODY CONTENT
   =========================== #}
{% block body %}

<h2 class="section-title">√âquipement du Club</h2>

<div class="d-flex justify-content-between align-items-center mb-4" style="gap: 16px;">
    <form method="get" class="front-card marketing-accent" style="display:flex; gap:12px; align-items:center; padding:18px; flex:1;">
        <input type="search" name="q" placeholder="Rechercher un produit..." 
               class="form-control" style="flex:1; max-width:420px;" 
               value="{{ app.request.query.get('q') }}">

        <select name="category" class="form-select" style="width:220px;">
            <option value="">Toutes les cat√©gories</option>
            {% for cat in categories|default([]) %}
                <option value="{{ cat }}" 
                    {% if app.request.query.get('category') == cat %}selected{% endif %}>
                    {{ cat }}
                </option>
            {% endfor %}
        </select>

        <select name="sort" class="form-select" style="width:220px;">
            <option value="name" {% if app.request.query.get('sort') == 'name' %}selected{% endif %}>
                Trier par nom
            </option>
            <option value="price" {% if app.request.query.get('sort') == 'price' %}selected{% endif %}>
                Trier par prix
            </option>
            <option value="stock" {% if app.request.query.get('sort') == 'stock' %}selected{% endif %}>
                Trier par stock
            </option>
        </select>

        <button class="btn btn-primary" type="submit">Chercher</button>
    </form>

    <div style="display: flex; gap: 10px;">
        <a href="{{ apiProductsUrl }}" class="btn btn-outline-primary" target="_blank" rel="noopener noreferrer">
            API JSON
        </a>
        <a href="{{ path('front_equipement_cart') }}" class="btn btn-success">
            Panier
        </a>
    </div>
</div>

<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 28px;">
    {% for product in products %}
        <div class="front-card">
            <div class="card-hero">
                {% if product.image %}
                    <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}">
                {% endif %}
            </div>

            <div class="card-body-custom">
                <div class="product-category">{{ product.category ?: 'Maillots' }}</div>
                <h3>{{ product.name }}</h3>
                <div class="product-price">{{ product.price|number_format(2, ',', ' ') }} USD</div>
                <div class="stock-text">
                    {% if product.stock > 0 %}{{ product.stock }} en stock{% else %}Rupture de stock{% endif %}
                </div>

                <div class="card-actions">
                    <a href="{{ path('front_equipement_show', {'id': product.id}) }}" class="btn btn-light" style="flex:1;">D√©tails</a>
                    {% if product.stock > 0 %}
                        <a href="{{ path('front_equipement_buy', {'id': product.id}) }}" class="btn btn-success" style="flex:1;">Ajouter</a>
                    {% else %}
                        <button class="btn btn-secondary" disabled style="flex:1;">Indisponible</button>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
            <p>Aucun produit trouv√©.</p>
        </div>
    {% endfor %}
</div>

<h3 class="section-title" style="margin-top: 36px;">Produits API (products.json)</h3>
<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 28px;">
    {% for apiProduct in apiProducts|default([]) %}
        <div class="front-card">
            <div class="card-hero">
                {% if apiProduct.image %}
                    <img src="{{ asset('api/' ~ apiProduct.image) }}" alt="{{ apiProduct.name }}">
                {% endif %}
            </div>
            <div class="card-body-custom">
                <div class="product-category">{{ apiProduct.category|default('Football') }}</div>
                <h3>{{ apiProduct.name|default('Produit API') }}</h3>
                <div class="product-price">{{ (apiProduct.price|default(0))|number_format(2, ',', ' ') }} USD</div>
                <p style="margin: 8px 0 0 0; color: var(--text-muted); font-size: 14px;">
                    Marque: {{ apiProduct.brand|default('N/A') }} | Taille: {{ apiProduct.size|default('N/A') }}
                </p>
                <div class="stock-text" style="margin-top: 8px;">
                    {% if (apiProduct.stock|default(0)) > 0 %}
                        {{ apiProduct.stock }} en stock
                    {% else %}
                        Rupture de stock
                    {% endif %}
                </div>
                {% if apiProduct.description is defined and apiProduct.description %}
                    <p style="margin-top: 8px; color: var(--text-muted);">{{ apiProduct.description }}</p>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
            <p>Aucun produit API trouv√© dans `public/api/products.json`.</p>
        </div>
    {% endfor %}
</div>

{% endblock %}

{# ===========================
   JAVASCRIPT (AI CHAT FUNCTIONALITY)
   =========================== #}
{% block javascripts %}
{{ parent() }}

<script>
document.addEventListener("DOMContentLoaded", function () {

    const bubble = document.getElementById("ai-chat-bubble");
    const chatWindow = document.getElementById("ai-chat-window");
    const closeBtn = document.getElementById("ai-chat-close");
    const form = document.getElementById("ai-chat-form");
    const input = document.getElementById("ai-chat-input");
    const messages = document.getElementById("ai-chat-messages");

    bubble.addEventListener("click", function () {
        chatWindow.style.display = "flex";
        bubble.style.display = "none";
        input.focus();
    });

    closeBtn.addEventListener("click", function () {
        chatWindow.style.display = "none";
        bubble.style.display = "flex";
    });

    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const userText = input.value.trim();
        if (!userText) return;

        messages.innerHTML += `<div class="user-message"><b>You:</b> ${userText}</div>`;
        input.value = "";
        messages.scrollTop = messages.scrollHeight;

        messages.innerHTML += `<div class="ai-message" id="loading">AI is typing...</div>`;
        messages.scrollTop = messages.scrollHeight;

        try {
            const response = await fetch("/equipement/ai-chat", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message: userText })
            });

            const data = await response.json();
            document.getElementById("loading").remove();

            messages.innerHTML += `<div class="ai-message"><b>AI:</b> ${data.reply}</div>`;
            messages.scrollTop = messages.scrollHeight;

        } catch (error) {
            document.getElementById("loading").remove();
            messages.innerHTML += `<div class="ai-message">‚ö† Error connecting to AI.</div>`;
        }
    });

});
</script>

{% endblock %}


