{% extends 'front_office/base.html.twig' %}

{% block title %}Éditer un commentaire - FC Club{% endblock %}

{% block body %}
    <div style="max-width: 700px; margin: 0 auto;">
        <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" style="color: var(--primary); text-decoration: none; margin-bottom: 24px; display: inline-block;">← Retour à l'annonce</a>

        <h1 class="section-title">Éditer mon commentaire</h1>

        <div class="front-card">
            <form method="post">
                <style>
                    .form-group { margin-bottom: 20px; }
                    .form-group label { display: block; margin-bottom: 8px; color: var(--text-dark); font-weight: 600; font-size: 14px; }
                    .form-group textarea {
                        width: 100%;
                        padding: 10px 12px;
                        border: 1px solid var(--border-color);
                        border-radius: 8px;
                        font-size: 14px;
                        font-family: inherit;
                        min-height: 120px;
                        resize: vertical;
                    }
                    .form-group textarea:focus {
                        outline: none;
                        border-color: var(--primary);
                        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
                    }
                    .form-actions { margin-top: 24px; display: flex; gap: 12px; }
                    .form-actions button { padding: 10px 24px; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; }
                    .form-actions .btn-primary { background: var(--primary); color: white; }
                    .form-actions .btn-primary:hover { background: var(--primary-hover); }
                </style>
                
                <div class="form-group">
                    <textarea 
                        id="contenu"
                        name="contenu" 
                        required 
                        oninput="debouncedCheck()">{{ commentaire.contenu }}</textarea>

                    <div id="mod_feedback_edit" style="margin-top: 16px;">
                        {# Status: Approved (Real-time) #}
                        <div id="mod_approved" style="display: none; padding: 12px 16px; background: rgba(16, 185, 129, 0.05); border-radius: 12px; border: 1px solid rgba(16, 185, 129, 0.2); color: #059669; font-size: 14px; font-weight: 500; align-items: center; gap: 12px; box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.05);">
                            <div style="background: #10b981; color: #fff; width: 22px; height: 22px; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-size: 11px; font-weight: 800;">✓</div>
                            <div>Votre message respecte les règles de la communauté.</div>
                        </div>

                        {# Status: Blocked (Real-time) #}
                        <div id="mod_blocked" style="display: none; padding: 16px; background: #fff1f2; border-radius: 12px; border: 2px solid #fecaca; color: #dc2626; font-size: 14px; font-weight: 500; align-items: start; gap: 12px; box-shadow: 0 4px 12px rgba(239, 68, 68, 0.1);">
                            <div style="background: #ef4444; color: #fff; width: 24px; height: 24px; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-size: 14px; font-weight: 900;">!</div>
                            <div style="flex-grow: 1;">
                                <div style="font-weight: 800; font-size: 15px; margin-bottom: 4px; text-transform: uppercase; letter-spacing: 0.5px;">Ce type de message doit être bloqué</div>
                                <div id="mod_reason" style="line-height: 1.5; color: #991b1b; background: white; padding: 10px; border-radius: 8px; border: 1px solid #fecaca; margin-top: 8px;"></div>
                            </div>
                        </div>

                        {# Server-side moderation errors #}
                        {% for message in app.flashes('moderation_error') %}
                            <div class="server-mod-error" style="padding: 16px; background: #fff1f2; border-radius: 12px; border: 1px solid #fecaca; color: #dc2626; font-size: 14px; font-weight: 500; display: flex; align-items: start; gap: 12px;">
                                <div style="background: #ef4444; color: #fff; width: 22px; height: 22px; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-size: 12px; font-weight: 800;">!</div>
                                <div style="line-height: 1.5;">{{ message }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="submit-btn" class="btn-primary">Mettre à jour</button>
                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" style="padding: 10px 24px; border-radius: 8px; background: var(--border-color); color: var(--text-dark); text-decoration: none; display: inline-block; font-weight: 600;">Annuler</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        let timeout = null;
        let moderationStatus = '{{ commentaire.moderationStatus == 'BLOCKED' ? 'BLOCKED' : 'APPROVED' }}';

        function debouncedCheck() {
            clearTimeout(timeout);
            document.querySelectorAll('.server-mod-error').forEach(el => el.style.display = 'none');
            document.getElementById('mod_approved').style.display = 'none';
            document.getElementById('mod_blocked').style.display = 'none';
            moderationStatus = 'CHECKING';
            timeout = setTimeout(() => checkModeration(), 600);
        }

        function checkModeration() {
            const text = document.getElementById('contenu').value;
            const statusApp = document.getElementById('mod_approved');
            const statusBlock = document.getElementById('mod_blocked');
            const reason = document.getElementById('mod_reason');

            if (!text.trim()) {
                moderationStatus = 'PENDING';
                return;
            }

            fetch('{{ path('app_commentaire_check') }}', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ text: text })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status === 'BLOCKED') {
                    moderationStatus = 'BLOCKED';
                    statusApp.style.display = 'none';
                    statusBlock.style.display = 'flex';
                    reason.innerText = data.reason;
                } else {
                    moderationStatus = 'APPROVED';
                    statusApp.style.display = 'flex';
                    statusBlock.style.display = 'none';
                }
            });
        }

        document.querySelector('form').addEventListener('submit', function(e) {
            if (moderationStatus === 'BLOCKED') {
                e.preventDefault();
                const statusBlock = document.getElementById('mod_blocked');
                statusBlock.style.display = 'flex';
                statusBlock.scrollIntoView({ behavior: 'smooth', block: 'center' });
                statusBlock.style.animation = 'shake 0.5s';
                setTimeout(() => statusBlock.style.animation = '', 500);
            }
        });
    </script>
    <style>
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
    </style>
{% endblock %}
