    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.form-annonce');
            const inputs = form.querySelectorAll('input[required], textarea[required], select[required]');

            // Validation en temps réel
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                });
                input.addEventListener('input', function() {
                    if (this.value.trim()) {
                        validateField(this);
                    }
                });
            });

            // Validation à la soumission
            form.addEventListener('submit', function(e) {
                let isValid = true;
                inputs.forEach(input => {
                    if (!validateField(input)) {
                        isValid = false;
                    }
                });
                
                if (!isValid) {
                    e.preventDefault();
                }
            });

            function validateField(field) {
                const formGroup = field.closest('.form-group');
                const fieldName = field.name;
                let isValid = true;
                let errorMsg = '';

                // Vérifier si le champ est vide
                if (field.hasAttribute('required') && !field.value.trim()) {
                    isValid = false;
                    errorMsg = 'Ce champ est obligatoire';
                }

                // Validation personnalisée selon le champ
                if (isValid) {
                    if (fieldName.includes('titre') && field.value.trim().length < 3) {
                        isValid = false;
                        errorMsg = 'Le titre doit contenir au moins 3 caractères';
                    }
                    if (fieldName.includes('description') && field.value.trim().length < 10) {
                        isValid = false;
                        errorMsg = 'La description doit contenir au moins 10 caractères';
                    }
                    if (fieldName.includes('description') && field.value.trim().length > 5000) {
                        isValid = false;
                        errorMsg = 'La description ne doit pas dépasser 5000 caractères';
                    }
                }

                // Afficher/masquer les erreurs
                if (!isValid) {
                    formGroup.classList.add('form-group-error');
                    let errorList = formGroup.querySelector('.form-error-list');
                    if (!errorList.querySelector('li')) {
                        errorList.innerHTML = `<li>${errorMsg}</li>`;
                        errorList.style.display = '';
                    }
                } else {
                    formGroup.classList.remove('form-group-error');
                    let errorList = formGroup.querySelector('.form-error-list');
                    errorList.innerHTML = '';
                    errorList.style.display = 'none';
                }

                return isValid;
            }
        });
    </script>

