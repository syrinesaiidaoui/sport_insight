{% extends 'front_office/base.html.twig' %}

{% block title %}{{ annonce.titre }} - Annonces FC Club{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <a href="{{ path('app_annonce_index') }}" style="color: var(--primary); text-decoration: none; margin-bottom: 24px; display: inline-block;">← Retour aux annonces</a>

        <div class="front-card">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 24px;">
                <div>
                    <h1 class="section-title" style="margin-bottom: 8px;">{{ annonce.titre }}</h1>
                    <p style="color: var(--text-muted); font-size: 14px;">Publié le {{ annonce.datePublication ? annonce.datePublication|date('d/m/Y') : 'N/A' }}</p>
                </div>
                <div style="white-space: nowrap;">
                    {% if annonce.statut == 'active' %}
                        <span class="badge-success">Actif</span>
                    {% elseif annonce.statut == 'inactive' %}
                        <span class="badge-warning">Inactif</span>
                    {% elseif annonce.statut == 'archivée' %}
                        <span class="badge-secondary">Archivée</span>
                    {% else %}
                        <span class="badge-warning">{{ annonce.statut }}</span>
                    {% endif %}
                </div>
            </div>

            <div style="margin-bottom: 24px; padding-bottom: 24px; border-bottom: 1px solid var(--border-color);">
                <h3 style="color: var(--text-dark); font-weight: 600; margin-bottom: 8px;">Description</h3>
                <p style="color: var(--text-dark); line-height: 1.6;">{{ annonce.description }}</p>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-bottom: 24px;">
                <div>
                    <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Poste Recherché</h4>
                    <p style="color: var(--text-dark); font-weight: 600;">{{ annonce.posteRecherche }}</p>
                </div>
                <div>
                    <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Niveau Requis</h4>
                    <p style="color: var(--text-dark); font-weight: 600;">{{ annonce.niveauRequis }}</p>
                </div>
            </div>

            <div style="display: flex; gap: 12px; padding-top: 24px; border-top: 1px solid var(--border-color);">
                <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-primary" style="padding: 8px 16px; font-size: 14px; text-decoration: none;">Éditer</a>
                
                <form method="post" action="{{ path('app_annonce_delete', {'id': annonce.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous vraiment sûr?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                    <button type="submit" class="btn btn-danger" style="padding: 8px 16px; font-size: 14px; background: #ef4444; border: none; color: white; border-radius: 8px; cursor: pointer;">Supprimer</button>
                </form>
            </div>
        </div>

        <!-- SECTION COMMENTAIRES -->
        <div style="margin-top: 40px;">
            {{ include('commentaire/_comments_list.html.twig') }}
        </div>

        <!-- FORMULAIRE COMMENTAIRE -->
        <div style="margin-top: 40px;">
            {{ include('commentaire/_form.html.twig') }}
        </div>
    </div>
{% endblock %}
