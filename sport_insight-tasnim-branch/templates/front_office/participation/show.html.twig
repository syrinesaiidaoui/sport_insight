{% extends 'front_office/base.html.twig' %}

{% block title %}Participation - FC Club{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <a href="{{ path('front_participation_index') }}" style="color: var(--primary); text-decoration: none; margin-bottom: 24px; display: inline-block;">← Retour à la liste</a>

        <div class="front-card">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 24px;">
                <div>
                    <h1 class="section-title" style="margin-bottom: 8px;">Participation</h1>
                    <p style="color: var(--text-muted); font-size: 14px;">{{ participation.joueur.nom }} {{ participation.joueur.prenom }} · {{ participation.entrainement.type }}</p>
                </div>
            </div>

            <div style="margin-bottom: 24px; padding-bottom: 24px; border-bottom: 1px solid var(--border-color);">
                <h3 style="color: var(--text-dark); font-weight: 600; margin-bottom: 8px;">Détails</h3>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Joueur</h4>
                        <p style="color: var(--text-dark); font-weight: 600;">{{ participation.joueur.nom }} {{ participation.joueur.prenom }}</p>
                    </div>
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Entrainement</h4>
                        <p style="color: var(--text-dark); font-weight: 600;">{{ participation.entrainement.type }}</p>
                    </div>
                </div>
                <div style="margin-top: 16px; display: grid; grid-template-columns: 1fr 1fr; gap: 24px; align-items: start;">
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Présence</h4>
                        {% if participation.presence == 'present' %}
                            <span style="display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; border-radius: 9999px; background: #dcfce7; color: #166534; font-weight: 600; font-size: 14px;">✔ Présent</span>
                        {% elseif participation.presence == 'absent' %}
                            <span style="display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; border-radius: 9999px; background: #fee2e2; color: #991b1b; font-weight: 600; font-size: 14px;">✖ Absent</span>
                        {% else %}
                            <span style="display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; border-radius: 9999px; background: #e5e7eb; color: #374151; font-weight: 600; font-size: 14px;">? Non défini</span>
                        {% endif %}
                    </div>
                    <div>
                        <h4 style="color: var(--text-muted); font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;">Justificatif d’absence</h4>
                        <p style="color: var(--text-dark); line-height: 1.6;">{{ participation.justificationAbsence|default('Aucun justificatif fourni') }}</p>
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 12px; padding-top: 24px; border-top: 1px solid var(--border-color);">
                <a href="{{ path('front_participation_edit', {'id': participation.id}) }}" class="btn btn-primary" style="padding: 8px 16px; font-size: 14px; text-decoration: none;">Éditer</a>
                <form method="post" action="{{ path('front_participation_delete', {'id': participation.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous vraiment sûr?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation.id) }}">
                    <button type="submit" class="btn btn-danger" style="padding: 8px 16px; font-size: 14px; background: #ef4444; border: none; color: white; border-radius: 8px; cursor: pointer;">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
