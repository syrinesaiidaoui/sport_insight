<form method="post"
      action="{{ path('front_participation_delete', { id: participation.id }) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette participation ?');">

    <input type="hidden" name="_token"
           value="{{ csrf_token('delete' ~ participation.id) }}">

    <button type="submit"
            class="w-full px-4 py-2 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition-colors">
        Supprimer
    </button>
</form>
