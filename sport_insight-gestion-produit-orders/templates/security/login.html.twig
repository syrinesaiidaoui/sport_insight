{% extends 'front_office/base.html.twig' %}

{% block title %}Login - Sport Insight{% endblock %}

{% block hero %}
    <div class="hero">
        <h1>Sport Insight</h1>
        <p>Sign in to access your account and complete purchases.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="page-container d-flex justify-content-center">
        <div class="front-card" style="max-width:420px; width:100%">
            <h3 class="mb-3">Sign in</h3>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="_password" required class="form-control" />
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                    <a href="{{ path('front_home') }}" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
